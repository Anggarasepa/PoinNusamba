<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".HomeMemberActivity">

    <!-- Konten utama -->
    <LinearLayout
        android:id="@+id/homeMemberLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Judul Selamat Datang -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang Mitra Nusamba"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="32dp"
            android:gravity="start"
            android:layout_gravity="start" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- Kartu Berita -->
            <LinearLayout
                android:id="@+id/btnBerita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_selector"
                android:elevation="4dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_berita"
                    android:contentDescription="Ikon Berita" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berita"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Spacer -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Kartu Poin -->
            <LinearLayout
                android:id="@+id/btnPoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_selector"
                android:elevation="4dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_poin"
                    android:contentDescription="Ikon Poin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>

        <!-- Kontak Admin -->
        <TextView
            android:id="@+id/tvHubungiAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mau Order Hari Ini?\nHubungi WhatsApp: 0821-1523-8393"
            android:textSize="13sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-light" />

        <!-- Tombol Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_primary"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</FrameLayout>
